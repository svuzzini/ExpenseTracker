  "shortcuts": [
    {
      "name": "Create Event",
      "short_name": "New Event",
      "description": "Create a new expense tracking event",
      "url": "/dashboard?action=create",
      "icons": [
        {
          "src": "/static/images/shortcut-create.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Join Event",
      "short_name": "Join",
      "description": "Join an existing event using a code",
      "url": "/dashboard?action=join",
      "icons": [
        {
          "src": "/static/images/shortcut-join.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Scan QR Code",
      "short_name": "Scan QR",
      "description": "Scan QR code to join an event",
      "url": "/dashboard?action=scan",
      "icons": [
        {
          "src": "/static/images/shortcut-scan.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-receipt",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "receipt",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+expensetracker",
      "url": "/join?code=%s"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "id": "expense-tracker-app",
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.expensetracker.app",
      "id": "com.expensetracker.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/expensetracker/id123456789",
      "id": "123456789"
    }
  ]
}
